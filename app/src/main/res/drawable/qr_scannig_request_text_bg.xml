<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disable state. -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:color="@color/white" android:width="2dp"/>
        </shape>
    </item>

    <!--released state. -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/qr_code_bg_tab"/>
            <stroke android:color="@color/qr_code_bg_tab" android:width="2dp"/>
        </shape>
    </item>

    <!--pressed state. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/textColor_40"/>
            <stroke android:color="@color/textColor_40" android:width="2dp"/>
        </shape>
    </item>

</selector>